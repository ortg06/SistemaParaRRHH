<configuration>
    <property name="HOME_LOG"  value="/opt/logMonitor/tareas.log"/>
    
    
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} %cyan([%t]) %-5level %logger{36} -%msg%n
            </Pattern>
        </layout>
    </appender>
  
    <appender name="FILE-ROLING" class="ch.qos.logback.core.rolling.RollingFileAppender" >
        <file>${HOME_LOG}</file>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            
            <fileNamePattern>/opt/logMonitor/archived/app.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            
            <maxFileSize>1KB</maxFileSize>
            <totalSizeCap>1GB</totalSizeCap>
            <maxHistory>3</maxHistory>
            <append>true</append>
        </rollingPolicy>
        <encoder>
            <pattern>%d %p %c{1.} [%t] %m%n</pattern>
        </encoder>
    </appender>
  
   
    <logger name="sistemapararrhh" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE-ROLING"/>
    </logger>
    
    
    <root level="debug">
        <appender-ref ref="FILE-ROLING"/>
    </root>
    
    
    
</configuration>